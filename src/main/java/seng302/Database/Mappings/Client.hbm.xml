<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
  "-//Hibernate/Hibernate Mapping DTD//EN"
  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
  <class name = "seng302.Client" table = "CLIENT">

    <meta attribute = "class-description">
      This class contains the clients details
    </meta>

    <id name = "uid" type = "int" column = "uid">
      <generator class="native"/>
    </id>
    <property name = "firstName" column = "first_name" type = "string"/>
    <property name = "lastName" column = "last_name" type = "string"/>
    <property name = "middleName" column = "middle_name" type = "string"/>
    <property name = "currentAddress" column = "current_address" type = "string"/>
    <property name = "region" column = "region" type = "string"/>
    <property name = "gender" column = "gender" type = "org.hibernate.type.EnumType"/>
    <property name = "bloodType" column = "blood_type" type = "org.hibernate.type.EnumType"/>
    <property name = "height" column = "height" type = "double"/>
    <property name = "weight" column = "weight" type = "double"/>
    <property name = "dateOfBirth" column = "date_of_birth" type = "date"/>
    <property name = "dateOfDeath" column = "date_of_death" type = "date"/>
    <property name = "createdTimestamp" column = "created_timestamp" type = "timestamp"/>
    <property name = "modifiedTimestamp" column = "modified_timestamp" type = "timestamp"/>




  </class>
</hibernate-mapping>