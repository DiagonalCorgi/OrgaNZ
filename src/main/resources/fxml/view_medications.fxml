<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.ListSelectionView?>

<VBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="seng302.Controller.Donor.ViewMedicationsController">
  <children>
    <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
      <items>
        <HBox fx:id="sidebarPane" maxWidth="200.0" minWidth="200.0" prefWidth="200.0" />
      <BorderPane>
        <top>
          <Text strokeType="OUTSIDE" strokeWidth="0.0" text="View/edit medications" textAlignment="CENTER" BorderPane.alignment="CENTER">
            <font>
              <Font size="24.0" />
            </font>
            <BorderPane.margin>
              <Insets top="50.0" />
            </BorderPane.margin>
          </Text>
        </top>
        <center>
              </center>
               <center>
                  <VBox BorderPane.alignment="CENTER">
                     <children>
                        <HBox>
                           <VBox.margin>
                              <Insets left="10.0" right="10.0" top="20.0" />
                           </VBox.margin>
                           <children>
                              <Label maxHeight="1.7976931348623157E308" text="Enter new medication: ">
                                 <font>
                                    <Font size="14.0" />
                                 </font>
                                 <HBox.margin>
                                    <Insets />
                                 </HBox.margin>
                              </Label>
                              <TextField fx:id="newMedField" onKeyPressed="#newMedKeyPressed" HBox.hgrow="ALWAYS" />
                           </children>
                        </HBox>
                        <ListSelectionView fx:id="medicationListsView" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
               </center>
      </BorderPane>
      </items>
    </SplitPane>
  </children>
</VBox>
