<VBox prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.humanharvest.organz.controller.client.RegisterOrganDonationController">
   <children>
     <SplitPane dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <items>
        <HBox fx:id="menuBarPane" maxHeight="-Infinity" minHeight="-Infinity" />
          <SplitPane dividerPositions="0.5" VBox.vgrow="ALWAYS">
             <items>
               <HBox fx:id="sidebarPane" maxWidth="-Infinity" />
               <VBox prefHeight="600.0" prefWidth="800.0">
                  <children>
                    <BorderPane VBox.vgrow="ALWAYS">
                      <center>
                              <GridPane>
                                 <columnConstraints>
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="26.0" />
                                    <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0" percentWidth="2.0" prefWidth="100.0" />
                                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                 </columnConstraints>
                                 <rowConstraints>
                                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                                 </rowConstraints>
                                 <children>
                             <GridPane fx:id="registerPane" hgap="50.0">
                               <columnConstraints>
                                 <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                               </columnConstraints>
                               <rowConstraints>
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                 <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                               </rowConstraints>
                                <children>
                                          <Label text="Registered to Donate">
                                             <font>
                                                <Font size="18.0" />
                                             </font>
                                          </Label>
                                          <GridPane GridPane.rowIndex="13">
                                            <columnConstraints>
                                              <ColumnConstraints hgrow="SOMETIMES" />
                                              <ColumnConstraints hgrow="SOMETIMES" />
                                            </columnConstraints>
                                            <rowConstraints>
                                                <RowConstraints vgrow="SOMETIMES" />
                                            </rowConstraints>
                                             <children>
                                                <Button mnemonicParsing="false" onAction="#selectAll" text="Select All" />
                                                <Button mnemonicParsing="false" onAction="#selectNone" text="Select None" GridPane.columnIndex="1" />
                                             </children>
                                          </GridPane>
                                  <CheckBox fx:id="checkBoxLiver" mnemonicParsing="false" text="Liver" GridPane.rowIndex="1" />
                                  <CheckBox fx:id="checkBoxKidney" layoutX="10.0" layoutY="127.0" mnemonicParsing="false" text="Kidney" GridPane.rowIndex="2" />
                                  <CheckBox fx:id="checkBoxPancreas" layoutX="10.0" layoutY="43.0" mnemonicParsing="false" text="Pancreas" GridPane.rowIndex="3" />
                                  <CheckBox fx:id="checkBoxHeart" layoutX="10.0" layoutY="295.0" mnemonicParsing="false" text="Heart" GridPane.rowIndex="4" />
                                  <CheckBox fx:id="checkBoxLung" layoutX="10.0" layoutY="379.0" mnemonicParsing="false" text="Lung" GridPane.rowIndex="5" />
                                  <CheckBox fx:id="checkBoxIntestine" layoutX="10.0" layoutY="463.0" mnemonicParsing="false" text="Intestine" GridPane.rowIndex="6" />
                                  <CheckBox fx:id="checkBoxCornea" layoutX="10.0" layoutY="547.0" mnemonicParsing="false" text="Cornea" GridPane.rowIndex="7" />
                                  <CheckBox fx:id="checkBoxMiddleEar" layoutX="535.0" layoutY="127.0" mnemonicParsing="false" text="Middle Ear" GridPane.rowIndex="8" />
                                  <CheckBox fx:id="checkBoxSkin" layoutX="535.0" layoutY="211.0" mnemonicParsing="false" text="Skin" GridPane.rowIndex="11" />
                                  <CheckBox fx:id="checkBoxBone" layoutX="535.0" layoutY="295.0" mnemonicParsing="false" text="Bone" GridPane.rowIndex="9" />
                                  <CheckBox fx:id="checkBoxBoneMarrow" layoutX="535.0" layoutY="379.0" mnemonicParsing="false" text="Bone Marrow" GridPane.rowIndex="10" />
                                  <CheckBox fx:id="checkBoxConnTissue" layoutX="535.0" layoutY="463.0" mnemonicParsing="false" text="Connective Tissue" GridPane.rowIndex="12" />
                                </children>
                             </GridPane>
                                    <Separator orientation="VERTICAL" prefHeight="200.0" GridPane.columnIndex="1" />
                                    <GridPane fx:id="donatedOrgansPane" GridPane.columnIndex="2">
                                       <columnConstraints>
                                          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                       </columnConstraints>
                                       <rowConstraints>
                                          <RowConstraints minHeight="40.0" vgrow="NEVER" />
                                          <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="ALWAYS" />
                                       </rowConstraints>
                                       <children>
                                          <Label text="Donated Organs">
                                             <font>
                                                <Font size="18.0" />
                                             </font>
                                          </Label>
                                          <TableView fx:id="donatedOrgansTable" GridPane.rowIndex="1">
                                             <columnResizePolicy>
                                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                                             </columnResizePolicy>
                                             <columns>
                                                <TableColumn fx:id="organCol" prefWidth="75.0" text="Organ" />
                                                <TableColumn fx:id="statusCol" prefWidth="75.0" text="Status" />
                                                <TableColumn fx:id="manualOverrideCol" prefWidth="75.0" text="Manual Override" />
                                             </columns>
                                             <placeholder>
                                                <Label text="This client has not yet donated any organs." />
                                             </placeholder>
                                          </TableView>
                                       </children>
                                    </GridPane>
                                 </children>
                                 <BorderPane.margin>
                                    <Insets left="20.0" right="20.0" />
                                 </BorderPane.margin>
                              </GridPane>
                      </center>
                           <bottom>
                              <HBox alignment="CENTER_RIGHT" prefHeight="50.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                                 <children>
                                    <Button fx:id="cancelButton" cancelButton="true" mnemonicParsing="false" onAction="#cancel" prefHeight="30.0" prefWidth="100.0" text="Cancel">
                                       <HBox.margin>
                                          <Insets />
                                       </HBox.margin>
                                    </Button>
                                    <Button fx:id="applyButton" mnemonicParsing="false" onAction="#apply" prefHeight="30.0" prefWidth="100.0" text="Apply">
                                       <HBox.margin>
                                          <Insets left="20.0" right="20.0" />
                                       </HBox.margin>
                                    </Button>
                                 </children>
                                 <opaqueInsets>
                                    <Insets />
                                 </opaqueInsets>
                              </HBox>
                           </bottom>
                           <top>
                              <Label fx:id="fullName" text="Full Name" wrapText="true" BorderPane.alignment="CENTER_LEFT">
                                 <font>
                                    <Font size="30.0" />
                                 </font>
                                 <BorderPane.margin>
                                    <Insets left="20.0" right="20.0" top="20.0" />
                                 </BorderPane.margin>
                              </Label>
                           </top>
                    </BorderPane>
                  </children>
               </VBox>
             </items>
          </SplitPane>
        </items>
     </SplitPane>
   </children>
</VBox>
