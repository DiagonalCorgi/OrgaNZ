<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8"
  fx:controller="com.humanharvest.organz.controller.client.RegisterOrganDonationController">
  <children>
    <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.5" orientation="VERTICAL" prefHeight="200.0"
      prefWidth="200.0">
      <items>
        <HBox maxHeight="-Infinity" minHeight="-Infinity" fx:id="menuBarPane"/>
        <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.5">
          <items>
            <HBox maxWidth="-Infinity" fx:id="sidebarPane"/>
            <VBox prefHeight="600.0" prefWidth="800.0">
              <children>
                <BorderPane VBox.vgrow="ALWAYS">
                  <center>
                    <GridPane>
                      <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                          percentWidth="26.0"/>
                        <ColumnConstraints halignment="CENTER" hgrow="NEVER" minWidth="10.0"
                          percentWidth="2.0" prefWidth="100.0"/>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                      </columnConstraints>
                      <rowConstraints>
                        <RowConstraints minHeight="10.0" vgrow="SOMETIMES"/>
                      </rowConstraints>
                      <children>
                        <GridPane hgap="50.0" fx:id="registerPane">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"
                              prefWidth="100.0"/>
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="SOMETIMES"/>
                          </rowConstraints>
                          <children>
                            <Label text="Registered to Donate">
                              <font>
                                <Font size="18.0"/>
                              </font>
                            </Label>
                            <GridPane GridPane.rowIndex="13">
                              <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                                <ColumnConstraints hgrow="SOMETIMES"/>
                              </columnConstraints>
                              <rowConstraints>
                                <RowConstraints vgrow="SOMETIMES"/>
                              </rowConstraints>
                              <children>
                                <Button mnemonicParsing="false" onAction="#selectAll"
                                  text="Select All"/>
                                <Button GridPane.columnIndex="1" mnemonicParsing="false"
                                  onAction="#selectNone" text="Select None"/>
                              </children>
                            </GridPane>
                            <CheckBox GridPane.rowIndex="1" mnemonicParsing="false"
                              text="Liver" fx:id="checkBoxLiver"/>
                            <CheckBox GridPane.rowIndex="2" layoutX="10.0" layoutY="127.0"
                              mnemonicParsing="false" text="Kidney"
                              fx:id="checkBoxKidney"/>
                            <CheckBox GridPane.rowIndex="3" layoutX="10.0" layoutY="43.0"
                              mnemonicParsing="false" text="Pancreas"
                              fx:id="checkBoxPancreas"/>
                            <CheckBox GridPane.rowIndex="4" layoutX="10.0" layoutY="295.0"
                              mnemonicParsing="false" text="Heart"
                              fx:id="checkBoxHeart"/>
                            <CheckBox GridPane.rowIndex="5" layoutX="10.0" layoutY="379.0"
                              mnemonicParsing="false" text="Lung"
                              fx:id="checkBoxLung"/>
                            <CheckBox GridPane.rowIndex="6" layoutX="10.0"
                              layoutY="463.0" mnemonicParsing="false"
                              text="Intestine" fx:id="checkBoxIntestine"/>
                            <CheckBox GridPane.rowIndex="7" layoutX="10.0" layoutY="547.0"
                              mnemonicParsing="false" text="Cornea"
                              fx:id="checkBoxCornea"/>
                            <CheckBox GridPane.rowIndex="8" layoutX="535.0"
                              layoutY="127.0" mnemonicParsing="false"
                              text="Middle Ear" fx:id="checkBoxMiddleEar"/>
                            <CheckBox GridPane.rowIndex="11" layoutX="535.0" layoutY="211.0"
                              mnemonicParsing="false" text="Skin"
                              fx:id="checkBoxSkin"/>
                            <CheckBox GridPane.rowIndex="9" layoutX="535.0" layoutY="295.0"
                              mnemonicParsing="false" text="Bone"
                              fx:id="checkBoxBone"/>
                            <CheckBox GridPane.rowIndex="10" layoutX="535.0"
                              layoutY="379.0" mnemonicParsing="false"
                              text="Bone Marrow" fx:id="checkBoxBoneMarrow"/>
                            <CheckBox GridPane.rowIndex="12" layoutX="535.0"
                              layoutY="463.0" mnemonicParsing="false"
                              text="Connective Tissue" fx:id="checkBoxConnTissue"/>
                          </children>
                        </GridPane>
                        <Separator GridPane.columnIndex="1" orientation="VERTICAL"
                          prefHeight="200.0"/>
                        <GridPane GridPane.columnIndex="2" fx:id="donatedOrgansPane">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0"/>
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints minHeight="40.0" vgrow="NEVER"/>
                            <RowConstraints minHeight="10.0" prefHeight="30.0"
                              vgrow="ALWAYS"/>
                          </rowConstraints>
                          <children>
                            <Label text="Donated Organs">
                              <font>
                                <Font size="18.0"/>
                              </font>
                            </Label>
                            <TableView GridPane.rowIndex="1" fx:id="donatedOrgansTable">
                              <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                              </columnResizePolicy>
                              <columns>
                                <TableColumn prefWidth="75.0" text="Organ"
                                  fx:id="organCol"/>
                                <TableColumn prefWidth="75.0" text="Time Until Expiry"
                                  fx:id="timeUntilExpiryCol"/>
                                <TableColumn prefWidth="75.0" text="Manual Override"
                                  fx:id="manualOverrideCol"/>
                              </columns>
                              <placeholder>
                                <Label text="This client has not yet donated any organs."/>
                              </placeholder>
                            </TableView>
                          </children>
                        </GridPane>
                      </children>
                      <BorderPane.margin>
                        <Insets left="20.0" right="20.0"/>
                      </BorderPane.margin>
                    </GridPane>
                  </center>
                  <bottom>
                    <HBox BorderPane.alignment="CENTER" alignment="CENTER_RIGHT" prefHeight="50.0"
                      prefWidth="200.0">
                      <children>
                        <Button cancelButton="true" mnemonicParsing="false" onAction="#cancel"
                          prefHeight="30.0" prefWidth="100.0" text="Cancel"
                          fx:id="cancelButton">
                          <HBox.margin>
                            <Insets/>
                          </HBox.margin>
                        </Button>
                        <Button mnemonicParsing="false" onAction="#apply" prefHeight="30.0"
                          prefWidth="100.0" text="Apply" fx:id="applyButton">
                          <HBox.margin>
                            <Insets left="20.0" right="20.0"/>
                          </HBox.margin>
                        </Button>
                      </children>
                      <opaqueInsets>
                        <Insets/>
                      </opaqueInsets>
                    </HBox>
                  </bottom>
                  <top>
                    <Label BorderPane.alignment="CENTER_LEFT" text="Full Name" wrapText="true"
                      fx:id="fullName">
                      <font>
                        <Font size="30.0"/>
                      </font>
                      <BorderPane.margin>
                        <Insets left="20.0" right="20.0" top="20.0"/>
                      </BorderPane.margin>
                    </Label>
                  </top>
                </BorderPane>
              </children>
            </VBox>
          </items>
        </SplitPane>
      </items>
    </SplitPane>
  </children>
</VBox>
