<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<VBox xmlns:fx="http://javafx.com/fxml/1" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121"
  fx:controller="com.humanharvest.organz.controller.client.ViewMedicationsController">
  <VBox fx:id="menuBarPane" maxWidth="1.7976931348623157E308" />
    <SplitPane VBox.vgrow="ALWAYS" dividerPositions="0.5">
      <HBox maxWidth="-Infinity" fx:id="sidebarPane"/>
      <BorderPane>
        <top>
          <Text BorderPane.alignment="CENTER" strokeType="OUTSIDE" strokeWidth="0.0" text="View/edit medications"
            textAlignment="CENTER">
            <font>
              <Font size="24.0"/>
            </font>
            <BorderPane.margin>
              <Insets top="20.0"/>
            </BorderPane.margin>
          </Text>
        </top>
        <center>
        </center>
        <center>
          <VBox BorderPane.alignment="CENTER">
            <HBox fx:id="newMedicationPane">
              <VBox.margin>
                <Insets left="10.0" right="10.0" top="20.0"/>
              </VBox.margin>
              <Label maxHeight="1.7976931348623157E308" text="Enter new medication: ">
                <font>
                  <Font size="14.0"/>
                </font>
                <HBox.margin>
                  <Insets/>
                </HBox.margin>
              </Label>
              <TextField HBox.hgrow="NEVER" onKeyPressed="#newMedKeyPressed" prefHeight="26.0"
                prefWidth="604.0" fx:id="newMedField">
                <HBox.margin>
                  <Insets left="15.0" right="15.0"/>
                </HBox.margin>
              </TextField>
              <Button mnemonicParsing="false" onAction="#addButtonPressed" text="Add Medication"/>
            </HBox>
            <HBox VBox.vgrow="ALWAYS">
              <VBox.margin>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0"/>
              </VBox.margin>
              <VBox HBox.hgrow="ALWAYS">
                <Label text="Past Medications">
                  <font>
                    <Font name="System Bold" size="12.0"/>
                  </font>
                  <VBox.margin>
                    <Insets bottom="10.0"/>
                  </VBox.margin>
                </Label>
                <ListView VBox.vgrow="ALWAYS" prefHeight="330.0" prefWidth="200.0"
                  fx:id="pastMedicationsView"/>
                <Label text="Medication Active Ingredients">
                  <VBox.margin>
                    <Insets top="10.0"/>
                  </VBox.margin>
                  <font>
                    <Font name="System Bold" size="12.0"/>
                  </font>
                </Label>
                <TextArea editable="false" prefHeight="200.0" prefWidth="200.0"
                  promptText="Select a medication to show ingredients for ..." wrapText="true"
                  fx:id="medicationIngredients"/>
              </VBox>
              <VBox alignment="TOP_CENTER" spacing="5.0">
                <HBox.margin>
                  <Insets left="10.0" right="10.0"/>
                </HBox.margin>
                <Button mnemonicParsing="false" onAction="#moveMedicationToHistory"
                  text="&lt;" textAlignment="CENTER" fx:id="moveToHistoryButton">
                  <VBox.margin>
                    <Insets top="115.0"/>
                  </VBox.margin>
                </Button>
                <Button mnemonicParsing="false" onAction="#moveMedicationToCurrent"
                  text="&gt;" textAlignment="CENTER" fx:id="moveToCurrentButton"/>
                <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
                  onAction="#deleteMedication" text="Delete" fx:id="deleteButton">
                  <VBox.margin>
                    <Insets top="90.0"/>
                  </VBox.margin>
                </Button>
              </VBox>
              <VBox HBox.hgrow="ALWAYS">
                <children>
                  <Label text="Current Medications">
                    <font>
                      <Font name="System Bold" size="12.0"/>
                    </font>
                    <VBox.margin>
                      <Insets bottom="10.0"/>
                    </VBox.margin>
                  </Label>
                  <ListView VBox.vgrow="ALWAYS" prefHeight="330.0" prefWidth="200.0"
                    fx:id="currentMedicationsView"/>
                  <Label text="Medication Interactions">
                    <VBox.margin>
                      <Insets top="10.0"/>
                    </VBox.margin>
                    <font>
                      <Font name="System Bold" size="12.0"/>
                    </font>
                  </Label>
                  <TextArea editable="false" prefHeight="200.0" prefWidth="200.0"
                    promptText="Select two medications to show interactions for ..."
                    wrapText="true"
                    fx:id="medicationInteractions"/>
                </children>
              </VBox>
            </HBox>
          </VBox>
        </center>
      </BorderPane>
    </SplitPane>
</VBox>
