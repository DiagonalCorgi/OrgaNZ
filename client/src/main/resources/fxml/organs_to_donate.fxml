<?import javafx.scene.text.Text?>
<?import org.controlsfx.control.CheckComboBox?>

<VBox minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="1000.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.humanharvest.organz.controller.clinician.OrgansToDonateController">
  <children>
    <SplitPane dividerPositions="0.5" orientation="VERTICAL" VBox.vgrow="ALWAYS">
      <items>
        <HBox fx:id="menuBarPane" maxHeight="20.0" minHeight="-Infinity" />
        <SplitPane prefHeight="600.0">
          <items>
            <BorderPane>
              <bottom>
                <VBox alignment="CENTER" prefWidth="200.0" BorderPane.alignment="CENTER">
                  <children>
                    <Pagination fx:id="pagination" prefWidth="200.0" />
                    <Text fx:id="displayingXToYOfZText" strokeType="OUTSIDE" strokeWidth="0.0" text="Displaying x-y of z" />
                  </children>
                  <padding>
                    <Insets bottom="10.0" top="5.0" />
                  </padding>
                </VBox>
              </bottom>
              <top>
                <GridPane vgap="5.0" BorderPane.alignment="CENTER">
                  <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="100.0" prefWidth="776.0" />
                  </columnConstraints>
                  <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                  </rowConstraints>
                  <children>
                    <Label prefHeight="25.0" prefWidth="797.0" text="Organs to Donate">
                      <font>
                        <Font size="20.0" />
                      </font>
                    </Label>
                    <TitledPane prefHeight="26.0" prefWidth="798.0" text="Filter" GridPane.rowIndex="1">
                      <content>
                        <GridPane hgap="10.0">
                          <columnConstraints>
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="6.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="5.0" prefWidth="100.0" />
                            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                          </columnConstraints>
                          <rowConstraints>
                            <RowConstraints vgrow="SOMETIMES" />
                          </rowConstraints>
                          <children>
                            <CheckComboBox fx:id="regionFilter" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="1" />
                            <CheckComboBox fx:id="organFilter" maxWidth="1.7976931348623157E308" prefWidth="150.0" GridPane.columnIndex="3" />
                            <Label text="Region:">
                              <GridPane.margin>
                                <Insets />
                              </GridPane.margin>
                            </Label>
                            <Label text="Organ:" GridPane.columnIndex="2" />
                          </children>
                        </GridPane>
                      </content>
                    </TitledPane>
                  </children>
                </GridPane>
              </top>
              <padding>
                <Insets left="10.0" right="10.0" top="20.0" />
              </padding>
              <center>
                <TableView fx:id="tableView" BorderPane.alignment="CENTER">
                  <placeholder>
                    <Label text="No organs to donate found that match those criteria." />
                  </placeholder>
                  <columns>
                    <TableColumn fx:id="clientCol" prefWidth="75.0" text="Client" />
                    <TableColumn fx:id="organCol" prefWidth="250.0" text="Organ" />
                    <TableColumn fx:id="regionCol" prefWidth="114.0" text="Region" />
                    <TableColumn fx:id="timeOfDeathCol" prefWidth="162.0" text="Time of death" />
                    <TableColumn fx:id="timeUntilExpiryCol" prefWidth="229.0" text="Time until expiry" />
                  </columns>
                  <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                  </columnResizePolicy>
                  <BorderPane.margin>
                    <Insets top="10.0" />
                  </BorderPane.margin>
                </TableView>
              </center>
              <right>
                <VBox alignment="CENTER" prefWidth="200.0" BorderPane.alignment="CENTER">
                  <BorderPane.margin>
                    <Insets left="5.0" top="10.0" />
                  </BorderPane.margin>
                  <children>
                    <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="25.0" prefWidth="208.0" text="Potential Recipients">
                      <font>
                        <Font size="17.0" />
                      </font>
                      <padding>
                        <Insets bottom="2.0" />
                      </padding>
                    </Label>
                    <ListView fx:id="potentialRecipients" prefWidth="200.0">
                      <VBox.margin>
                        <Insets />
                      </VBox.margin>
                    </ListView>
                    <DatePicker fx:id="transplantDatePicker" maxWidth="1.7976931348623157E308" promptText="dd/mm/yyyy">
                      <VBox.margin>
                        <Insets top="5.0" />
                      </VBox.margin>
                    </DatePicker>
                    <Button fx:id="scheduleTransplantBtn" alignment="CENTER" contentDisplay="CENTER" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#scheduleTransplant" text="Schedule Transplant">
                      <VBox.margin>
                        <Insets top="3.0" />
                      </VBox.margin>
                    </Button>
                  </children>
                </VBox>
              </right>
            </BorderPane>
          </items>
        </SplitPane>
      </items>
    </SplitPane>
  </children>
</VBox>
