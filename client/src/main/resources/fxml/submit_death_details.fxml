<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
          minWidth="-Infinity" prefHeight="350.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.121"
          fx:controller="com.humanharvest.organz.controller.client.SubmitDeathDetailsController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="25.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" percentWidth="20.0" prefWidth="100.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <children>
        <Label text="Details of Death" GridPane.columnIndex="1">
            <font>
                <Font size="24.0"/>
            </font>
        </Label>
        <Label text="Date" GridPane.halignment="CENTER" GridPane.rowIndex="1"/>
        <DatePicker fx:id="deathDatePicker" maxWidth="1.7976931348623157E308" GridPane.columnIndex="1"
                    GridPane.rowIndex="1"/>
        <Label text="Time" GridPane.halignment="CENTER" GridPane.rowIndex="2"/>
        <TextField fx:id="deathTimeField" promptText="HH:mm:ss" GridPane.columnIndex="1" GridPane.rowIndex="2"/>
        <Label text="Country" GridPane.halignment="CENTER" GridPane.rowIndex="3"/>
        <ChoiceBox fx:id="deathCountry" maxWidth="1.7976931348623157E308" prefHeight="25.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="3"/>
        <Label text="Region" GridPane.halignment="CENTER" GridPane.rowIndex="4"/>
        <ChoiceBox fx:id="deathRegionCB" maxWidth="1.7976931348623157E308" prefHeight="25.0" GridPane.columnIndex="1"
                   GridPane.rowIndex="4"/>
        <TextField fx:id="deathRegionTF" GridPane.columnIndex="1" GridPane.rowIndex="4"/>
        <Label text="City" GridPane.halignment="CENTER" GridPane.rowIndex="5"/>
        <TextField fx:id="deathCity" GridPane.columnIndex="1" GridPane.rowIndex="5"/>
        <GridPane hgap="20.0" GridPane.columnIndex="1" GridPane.rowIndex="6">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#cancel" prefHeight="25.0"
                        text="Cancel"/>
                <Button maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#submit" prefHeight="25.0"
                        text="Submit" GridPane.columnIndex="1"/>
            </children>
        </GridPane>
    </children>
</GridPane>
